{
  "title": "Mac Mouse Enhance",
  "rules": [
    {
      "description": "Mouse 3/4: Switch Right/Left",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4"
          },
          "to": [
            {
              "repeat": false,
              "key_code": "right_arrow",
              "modifiers": [
                "left_control"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "pointing_button": "button5"
          },
          "to": [
            {
              "repeat": false,
              "key_code": "left_arrow",
              "modifiers": [
                "left_control"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Mouse 1: Disable Ctrl + leftClick = righeClick 2",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button1",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "pointing_button": "button1"
            }
          ]
        }
      ]
    },
    {
      "description": "Mouse 1: Disable Ctrl + leftClick = righeClick",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button1",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "pointing_button": "control"
            }
          ]
        }
      ]
    }
  ]
}
